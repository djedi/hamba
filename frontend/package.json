		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tauri-apps/api": "^2.9.1",
		"@tauri-apps/cli": "^2.9.6",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@vitest/coverage-v8": "^4.0.15",
		"jsdom": "^27.3.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.15"
